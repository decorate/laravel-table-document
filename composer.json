{
    "name": "decorate/laravel-table-document",
    "description": "Laravel database table documentation generator with Mermaid ER diagram support",
    "license": "MIT",
    "authors": [
        {
            "name": "take",
            "email": "ishizuka@shrp.jp"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/console": "^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0|^11.0|^12.0",
        "illuminate/view": "^10.0|^11.0|^12.0",
        "illuminate/filesystem": "^10.0|^11.0|^12.0",
        "doctrine/dbal": "^3.0|^4.0",
        "symfony/yaml": "^6.0|^7.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^10.0|^11.0",
        "laravel/pint": "^1.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Decorate\\LaravelTableDocument\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Decorate\\LaravelTableDocument\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Decorate\\LaravelTableDocument\\TableDocumentServiceProvider"
            ],
            "aliases": {
                "TableDocument": "Decorate\\LaravelTableDocument\\Facades\\TableDocument"
            }
        },
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "keywords": [
        "laravel",
        "database",
        "documentation",
        "table",
        "schema",
        "mermaid",
        "er-diagram"
    ]
}
